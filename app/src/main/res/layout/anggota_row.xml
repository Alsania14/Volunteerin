<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llAnggotaRowRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="20dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

        <TextView
            android:id="@+id/tvAnggotaRowNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Anggota"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/tvAnggotaRowUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/tvAnggotaRowNoTelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="88888888888888"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            tools:ignore="HardcodedText"/>


        <TextView
            android:id="@+id/tvAnggotaRowBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="bio"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            tools:ignore="HardcodedText"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>