<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/colorPrimary"
    android:padding="0dp">

    <FrameLayout
        android:id="@+id/LoginHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        >
        <View
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/header"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textAllCaps="true"
            android:textSize="12dp"
            android:layout_marginTop="25dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/colorAccent"
            tools:ignore="HardcodedText" />

    </FrameLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/LoginHeader"
            android:layout_marginTop="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/body"
            android:padding="20dp"
            >

            <View
                android:id="@+id/loginLogo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/logo"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/colorAccent"
                tools:ignore="HardcodedText" />
            <EditText
                android:id="@+id/etLognUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Username Anda"
                android:background="@drawable/input"
                android:layout_marginTop="3dp"
                android:paddingLeft="10dp"
                tools:ignore="HardcodedText"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Username"
                android:textColor="@color/colorAccent"
                tools:ignore="HardcodedText" />
            <EditText
                android:id="@+id/etLoginPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Pssword Anda"
                android:background="@drawable/input"
                android:inputType="textPassword"
                android:layout_marginTop="3dp"
                android:paddingLeft="10dp"
                tools:ignore="HardcodedText"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/pbLogin"
                    android:layout_marginTop="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:visibility="invisible"/>

            </LinearLayout>
            
            <Button
                android:id="@+id/btnLoginSumbit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="SUBMIT"
                android:background="@drawable/button"
                tools:ignore="HardcodedText"
                />

            <Button
                android:id="@+id/btnLoginRegister"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="REGISTER"
                android:background="@drawable/button"
                tools:ignore="HardcodedText"
                />

        </LinearLayout>
        </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/footer"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Right Reserved | Kelompok Pratikum"
            tools:ignore="HardcodedText"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            />


    </LinearLayout>



</RelativeLayout>