<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvRequestForJoin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    android:layout_marginTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:orientation="vertical"
        android:padding="6dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Lengkap Volunteer"
            android:textColor="@color/colorAccent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvRequestForJoinFullName"
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Username volunteer"
            android:textColor="@color/colorAccent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvRequestForJoinName"
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Bio"
            android:textColor="@color/colorAccent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvRequestForJoinBio"
            android:layout_width="match_parent"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nomor Telp"
            android:textColor="@color/colorAccent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvRequestForJoinNoTelp"
            android:layout_width="match_parent"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ProgressBar
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="invisible"
                />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            
            <Button
                android:id="@+id/btnRequestForJoinAccept"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:text="ACCEPT"
                android:background="@drawable/button"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btnRequestForJoinDenied"
                android:layout_width="match_parent"
                android:background="@drawable/button"
                android:text="REFUSE"
                android:layout_marginStart="10dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>