<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/colorPrimary"
    android:padding="0dp">



    <FrameLayout
        android:id="@+id/RegisterHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        >
        <View
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/header"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:textAllCaps="true"
            android:textSize="12dp"
            android:layout_marginTop="25dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/colorAccent"
            tools:ignore="HardcodedText" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/RegisterHeader"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/body"
            android:padding="20dp">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:src="@drawable/logo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FULL NAME"
                tools:ignore="HardcodedText"
                android:textColor="@color/colorAccent"
                />


            <EditText
                android:id="@+id/etRegisterFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="MASUKKAN FULLNAME"
                tools:ignore="HardcodedText"
                android:maxLines="1"
                android:background="@drawable/input"
                android:paddingLeft="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="USERNAME"
                tools:ignore="HardcodedText"
                android:textColor="@color/colorAccent"
                />

            <EditText
                android:id="@+id/etRegisterUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="MASUKKAN USERNAME"
                tools:ignore="HardcodedText"
                android:background="@drawable/input"
                android:paddingLeft="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DESCRIBE YOUR SELF"
                tools:ignore="HardcodedText"
                android:textColor="@color/colorAccent"
                />

            <EditText
                android:id="@+id/etRegisterBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:scrollHorizontally="false"
                android:hint="BIO"
                tools:ignore="HardcodedText"
                android:background="@drawable/input"
                android:paddingLeft="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOMOR TELEPHONE"
                tools:ignore="HardcodedText"
                android:textColor="@color/colorAccent"
                />

            <EditText
                android:id="@+id/etRegisterNotelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="MASUKKAN NOMOR TLP"
                android:inputType="number"
                tools:ignore="HardcodedText"
                android:maxLines="1"
                android:background="@drawable/input"
                android:paddingLeft="10dp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PASSWORD"
                tools:ignore="HardcodedText"
                android:textColor="@color/colorAccent"
                />

            <EditText
                android:id="@+id/etRegisterPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="MASUKKAN PASSWORD"
                tools:ignore="HardcodedText"
                android:scrollHorizontally="false"
                android:background="@drawable/input"
                android:paddingLeft="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PASSWORD CONFIRMATION"
                tools:ignore="HardcodedText"
                android:inputType="number"
                android:textColor="@color/colorAccent"
                />

            <EditText
                android:id="@+id/etRegisterPasswordCon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PASSWORD CONFIRTMATION"
                tools:ignore="HardcodedText"
                android:maxLines="1"
                android:background="@drawable/input"
                android:paddingLeft="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                >

            <Button
                android:id="@+id/btnRegisterCancel"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="CAMCEL"
                tools:ignore="HardcodedText"
                />

            <Button
                android:id="@+id/btnRegisterSubmit"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="SUBMIT"
                android:layout_marginLeft="20dp"
                tools:ignore="HardcodedText"
                />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>



    <LinearLayout
        android:id="@+id/RegisterFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/footer"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Right Reserver | Kelompok Pratikum"
            tools:ignore="HardcodedText"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            />


    </LinearLayout>



</RelativeLayout>